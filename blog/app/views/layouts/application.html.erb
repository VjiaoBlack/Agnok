<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-11419055-9', 'auto');
  ga('send', 'pageview');

</script>



  <div id="bg"></div>

  <div id="head">
    <div id="head-content">
        <div id="title">
            <h1><%= link_to "Agnok's Site of Forums", root_path %></h1>
        </div>


        <% if session[:user_id] %>
          <% if User.where(:id => session[:user_id]).blank? %>
            <% redirect_to(:controller => "sessions", :action => "destroy") %>
          <% else %>
            <h2>Welcome, <%= User.find(session[:user_id])[:name] %>!</h2>
          <% end %>
        <% end %>

        <div id="admin">
            <%= link_to "Admin", "/admin_panels" %>
        </div>

        <div id="login">
            <%= link_to "Log In", new_session_path %>
        </div>
        <div id="register">
            <%= link_to "Register", new_user_path %>
        </div>
        <div id="logout">
            <%= link_to "Log Out", "/log_out" %>
        </div>
    </div>
  </div>

  <div id="body">
    <div id="body-content">
        <%= yield %>
    </div>
  </div>

</body>
</html>
