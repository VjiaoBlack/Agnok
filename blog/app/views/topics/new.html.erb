<%= form_for :topic, url: topics_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <%= hidden_field_tag :category_id, params[:category_id] %>


  <p>
    <%= f.submit %>
  </p>
<% end %>
