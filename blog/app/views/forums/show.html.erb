<!DOCTYPE html>
<head>
</head>
<body>
    <h1>Forum: <%= @forum.name %></h1>
    <h3><%= @forum.description %> </h3>
    </br>
        <% @categories.each do |category| %>
            <hr>
            <h3><%= link_to category.name, category_path(id: category.id) %></h3>
            <p><%= category.description %></p>
            <% if User.find(session[:user_id])[:email] == "VjiaoBlack@gmail.com" %>
                <%= link_to "Delete", category_path(category, forum_id: @forum.id), method: :delete %>
            <% end %>
            <hr/>

        <% end %>

        <% if session[:user_id] %>

    <h3><%= link_to "Create a Category!", new_category_path(forum_id: @forum.id)%></h3>
    <% end %>

    <%= link_to "Back", root_path %>

</body>
</html>
