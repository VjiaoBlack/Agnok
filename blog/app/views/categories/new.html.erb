<%= form_for :category, url: categories_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <%= hidden_field_tag :forum_id, params[:forum_id] %>

  <p>
    <%= f.submit %>
  </p>
<% end %>
