<h1>Listing posts</h1>
<%= link_to 'New post', new_post_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><hr><%= post.title %><hr></td>
      <td><hr><%= post.text %><hr></td>
      <td><hr><%= link_to 'Show', post %><hr></td>
      <td><hr><%= link_to 'Edit', edit_post_path(post) %><hr></td>
      <td><hr><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %><hr></td>
    </tr>
  <% end %>
</table>
